<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for battle"
        android:layout_above="@+id/mypokemon"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/forfeitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/opponentPokemon"
        android:layout_toStartOf="@+id/testButton"
        android:clickable="false"
        android:text="forfeit"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/PokemonText"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/attack"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:text="Attack"
        android:visibility="invisible"
        android:clickable="false"/>

    <ImageView
        android:id="@+id/titleicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/pokemonshowdown" />

    <ImageView
        android:id="@+id/opponentPokemon"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titleicon"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/mypokemon"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_above="@+id/PokemonText"
        android:layout_alignParentStart="true"
        android:src="@drawable/empty" />

    <Button
        android:id="@+id/switchPokemon"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/attack"
        android:layout_alignLeft="@+id/attack"
        android:layout_below="@+id/attack"
        android:text="Switch"
        android:visibility="invisible"
        android:clickable="false"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move 1"
        android:id="@+id/move1"
        android:layout_alignTop="@+id/mypokemon"
        android:layout_toEndOf="@+id/mypokemon"
        android:visibility="invisible"
        android:clickable="false"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move 2"
        android:id="@+id/move2"
        android:layout_below="@+id/testButton"
        android:layout_alignStart="@+id/attack"
        android:visibility="invisible"
        android:clickable="false"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move 3"
        android:id="@+id/move3"
        android:layout_below="@+id/move1"
        android:layout_alignStart="@+id/move1"
        android:visibility="invisible"
        android:clickable="false"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move 4"
        android:id="@+id/move4"
        android:layout_alignTop="@+id/move3"
        android:layout_alignStart="@+id/switchPokemon"
        android:visibility="invisible"
        android:clickable="false"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon 2"
        android:id="@+id/pokemon2"
        android:layout_alignTop="@+id/pokemon3"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon 3"
        android:id="@+id/pokemon3"
        android:layout_alignBottom="@+id/switchPokemon"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon 4"
        android:id="@+id/pokemon4"
        android:layout_below="@+id/pokemon2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
